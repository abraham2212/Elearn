@model Course

@{
    ViewData["Title"] = "Delete";
}


<div class="container my-5">

    <div class="form-group">
        <label class="mt-3" for="exampleInputEmail1">Name</label>
        <input class="form-control" type="text" id="formFile" asp-for="Name">
    </div>
    <div class="form-group">
        <label class="mt-3" for="exampleInputEmail1">Description</label>
        <input class="form-control" type="text" id="formFile" asp-for="Description">
    </div>
    <div class="form-group">
        <label class="mt-3" for="exampleInputEmail1">Price</label>
        <input class="form-control" type="text"  id="formFile" asp-for="Price">
    </div>
    <div class="form-group">
        <label class="mt-3" for="exampleInputEmail1">Sale Count</label>
        <input class="form-control" type="number" id="formFile" asp-for="Sales">
    </div>
    <div class="form-group">
        <label class="mt-3" for="exampleInputEmail1"> Owner Fullname</label>
        <input class="form-control" id="customFile" asp-for="Owner.Name"/>
    </div>
    <div class="form-group">
        <label class="mt-3" for="exampleInputEmail1"> Publish Date</label>
        <input class="form-control" type="datetime-local" id="formFile" asp-for="PublishDate">
    </div>
   
        <div class="mt-5">
               @foreach (var item in Model.CourseImages)
               {
                   <img src="~/images/@item.Image" style="width: 150px; height: 150px;"/>
               }
        </div>

        <div class="mt-5">
           
            <h3 class="text-danger">Are you sure to delete product?</h3>

        </div>

      
    <form class="forms-sample" asp-action="Delete"  method="post" >
         <div class="mt-5">
           <div class="buttons my-3">
                <button type="submit" class="btn btn-primary mr-2">Delete</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
           </div>
        </div>
    </form>  

</div>




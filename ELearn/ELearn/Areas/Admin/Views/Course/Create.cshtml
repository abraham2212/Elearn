@model CourseCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1>Slider Create</h1>
    <form class="forms-sample" asp-action="Create" method="Post" enctype="multipart/form-data">
        <div class="form-group mt-5">
            <label class="mt-3" for="formFile">Choose a new image for course</label>
            <input class="form-control"  id="formFile" asp-for="Photos">
            <span asp-validation-for="Photos"></span>
        </div>
        <div class="form-group">
            <label class="mt-3" for="exampleInputEmail1">Name</label>
            <input class="form-control" type="text" id="formFile" asp-for="Name">
            <span asp-validation-for="Name"></span>

        </div>
        <div class="form-group">
            <label class="mt-3" for="exampleInputEmail1">Description</label>
            <input class="form-control" type="text" id="formFile" asp-for="Description">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label class="mt-3" for="exampleInputEmail1">Price</label>
            <input class="form-control" type="number" step=".01" id="formFile" asp-for="Price">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label class="mt-3" for="exampleInputEmail1">Sale</label>
            <input class="form-control" type="number" id="formFile" asp-for="Sales">
            <span asp-validation-for="Sales"></span>
        </div>
        <div class="form-group">
            <label class="mt-3" for="exampleInputEmail1"> Owner Fullname</label>
            <select class="form-control" id="customFile" asp-for="OwnerId" asp-items="@ViewBag.owners"></select>  
            <span asp-validation-for="OwnerId"></span>
        </div>
        <div class="form-group">
            <label class="mt-3" for="exampleInputEmail1"> Publish Date</label>
            <input class="form-control" type="datetime-local" id="formFile" asp-for="PublishDate">
            <span asp-validation-for="PublishDate"></span>
        </div>
         <div class="buttons mt-5">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <button class="btn btn-dark">Cancel</button>
        </div>
        
    </form>
    <div class="back">
        <a class="btn btn-primary btn-rounded btn-fw my-5" asp-action="Index">
            <i class="mdi mdi-arrow-left-bold"></i>
            Back to main page
        </a>
    </div>
</div>

